---
import Python from "./icons/Python.astro";
import Firebase from "./icons/Firebase.astro";
import Flutter from "./icons/Flutter.astro";
import NodeJS from "./icons/NodeJS.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  PYTHON: {
    name: "Python",
    class: "bg-blue-100 text-blue-800",
    icon: Python,
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-yellow-100 text-yellow-800",
    icon: Firebase,
  },
  FLUTTER: {
    name: "Flutter",
    class: "bg-cyan-100 text-cyan-800",
    icon: Flutter,
  },
  IA: {
    name: "Inteligencia Artificial",
    class: "bg-purple-100 text-purple-800",
    icon: Python, // Reuse Python icon for AI generically or imported AI icon
  },
  CLOUD: {
    name: "Cloud",
    class: "bg-sky-100 text-sky-800",
    icon: Firebase, // Reuse Firebase/Cloud icon
  },
  BOT: {
    name: "Automatización",
    class: "bg-green-100 text-green-800",
    icon: NodeJS,
  },
  NODEJS: {
    name: "Node.js",
    class: "bg-green-100 text-green-800",
    icon: NodeJS,
  },
  SAAS: {
    name: "SaaS",
    class: "bg-indigo-100 text-indigo-800",
    icon: Firebase, // Reuse Firebase/Cloud icon for SaaS
  },
  OMNICANAL: {
    name: "Omnicanal",
    class: "bg-orange-100 text-orange-800",
    icon: NodeJS, // Reuse generic icon or import specific if available
  },
};

const PROJECTS = [
  {
    title: "Lynex - Gestión Omnicanal",
    description:
      "Plataforma SaaS que centraliza WhatsApp, Email y Webchat en una sola interfaz. Lynex ofrece integraciones con sistemas del cliente como un servicio profesional a la medida. Cada integración requiere análisis técnico, desarrollo, pruebas y mantenimiento continuo.",
    link: "https://www.lynex.app",
    image: "/src/assets/projects/admin-siem.png", // Use placeholder or screenshot if available
    tags: [TAGS.SAAS, TAGS.OMNICANAL, TAGS.BOT],
  },
  {
    title: "Bots Inteligentes",
    description:
      "Chatbots y asistentes virtuales con procesamiento de lenguaje natural (NLP). Integración con sistemas de atención al cliente para automatizar respuestas y mejorar la eficiencia operativa.",
    link: "https://www.siriscloud.com.co",
    image: "/src/assets/projects/admin-siem.png", // Placeholder, should be updated if assets available
    tags: [TAGS.BOT, TAGS.IA, TAGS.PYTHON],
  },
  {
    title: "Aplicaciones con IA",
    description:
      "Desarrollo de aplicaciones inteligentes que integran modelos de IA personalizados para análisis de datos, visión por computador y toma de decisiones automatizada.",
    link: "https://www.siriscloud.com.co",
    image: "/src/assets/projects/sirispos.png", // Placeholder
    tags: [TAGS.IA, TAGS.FLUTTER, TAGS.PYTHON],
  },
  {
    title: "Infraestructura Cloud",
    description:
      "Arquitectura escalable y segura en la nube. Implementación de soluciones robustas con auto-scaling, backups automáticos y alta disponibilidad.",
    link: "https://www.siriscloud.com.co",
    image: "/src/assets/projects/sirispos.png", // Placeholder
    tags: [TAGS.CLOUD, TAGS.FIREBASE, TAGS.NODEJS],
  },
  {
    title: "WhatsApp Business API",
    description:
      "Automatización de comunicaciones empresariales a través de WhatsApp. Envío masivo de notificaciones, chatbots transaccionales y soporte 24/7.",
    link: "https://www.siriscloud.com.co",
    image: "/src/assets/projects/admin-siem.png", // Placeholder
    tags: [TAGS.BOT, TAGS.NODEJS],
  },
];
---

<div class="grid gap-8 md:grid-cols-2">
  {
    PROJECTS.map(({ image, title, description, tags, link }) => (
      <article class="flex flex-col group bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow">
        <div class="p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-2">{title}</h3>
          <p class="text-gray-600 mb-4 text-sm leading-relaxed">
            {description}
          </p>

          <ul class="flex flex-wrap gap-2 mb-4">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex items-center gap-1 rounded-full text-xs font-medium px-2.5 py-0.5 ${tag.class}`}
                >
                  <tag.icon class="size-3" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>

          <footer class="mt-auto">
            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Saber más
              </LinkButton>
            )}
          </footer>
        </div>
      </article>
    ))
  }
</div>
